<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:gravity="right"
            />
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_clear"
                    android:text="AC"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorFunctionBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_root"
                    android:text="√"
                    android:layout_marginLeft="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/colorFunctionUniqueBackground"
                    android:background="@color/colorFunctionBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_percentage"
                    android:text="%"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/colorFunctionUniqueBackground"
                    android:background="@color/colorFunctionBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_division"
                    android:text="÷"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:textColor="@color/colorFunctionText"
                    android:background="@color/colorFunctionBackground"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
        >

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_seven"
                    android:text="7"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_eight"
                    android:text="8"
                    android:layout_marginLeft="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_nine"
                    android:text="9"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_multiply"
                    android:text="×"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorFunctionText"
                    android:background="@color/colorFunctionBackground"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_four"
                    android:text="4"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_five"
                    android:text="5"
                    android:layout_marginLeft="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_six"
                    android:text="6"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_minus"
                    android:text="-"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorFunctionText"
                    android:background="@color/colorFunctionBackground"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_one"
                    android:text="1"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_two"
                    android:text="2"
                    android:layout_marginLeft="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_three"
                    android:text="3"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_plus"
                    android:text="+"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorFunctionText"
                    android:background="@color/colorFunctionBackground"
            />
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
        >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_dot"
                    android:text="."
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorFunctionBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_zero"
                    android:text="0"
                    android:layout_marginLeft="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorNumberText"
                    android:background="@color/colorNumberBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_square"
                    android:text="x²"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="35sp"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorFunctionUniqueBackground"
                    android:background="@color/colorFunctionBackground"
            />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_equal"
                    android:text="="
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:minHeight="80dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:background="@color/darkGrey"
            />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
